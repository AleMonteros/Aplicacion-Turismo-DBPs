@page
@model LoginModel

@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>

<body class="pantalla">
<div class="container">
<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <form id="account" method="post">
            <div class="card card-signin my-5">
                <div class="card-body">
                <h1  class="card-title text-center">Inicar Seccion AppSocialTour</h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Correo Electronico</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu Contraseña?</a>
                    </p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Inicar Seccion</button>
                </div>
                </div>
            </div>
            </form>
    </div>
</div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
