@model  AppSocialTour.Models.Cultura

@{
    ViewData["Title"] = "DetallesC";
}
<body class="pantallaC">
<form>
<div class="card card-signin my-5 text-white bg-dark">
    <div class="card-body text-white bg-dark">
        <h1 class="card-title text-center">@Html.DisplayFor(model => model.Nombre)</h1>
        <hr />
        <div>
        <dt class = "form-group">Categoria</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Direccion</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Horario</dt>
        <dd class = "form group">
            @Html.DisplayFor(model => model.Horario)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Historia</dt>
        <dd class = "form group">
            @Html.DisplayFor(model => model.Historia)
        </dd>
        </div>
        <hr >
        <div class="form-group">
            <input asp-action="EditarC" asp-route-id="@Model.ID" type="submit" class="btn btn-outline-primary" value="Actualizar">
        </div>
        <div class="form-group">
            <input asp-action="EliminarC" asp-route-id="@Model.ID" type="submit" class="btn btn-outline-danger" value="Eliminar">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary" asp-action="indexC" asp-route-id="@Model.ID">Volver</button>
        </div>
    </div>
</div>
</form>
</body>