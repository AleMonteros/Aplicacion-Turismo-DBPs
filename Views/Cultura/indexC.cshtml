@model IEnumerable<Cultura>
<div class="row mb-2">
  @foreach (var item in Model)
    {
    <div class="col-md-6">
      <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative card card-signin bg-dark">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-white text-center">@Html.DisplayFor(modelItem => item.Nombre)</strong>
          <p class="card-text mb-auto text-white">@Html.DisplayFor(modelItem => item.Categoria)</p>
          <p class="card-text mb-auto text-white">Direccion : @Html.DisplayFor(modelItem => item.Direccion)</p>
          <p class="card-text mb-auto text-white">Horario : @Html.DisplayFor(modelItem => item.Horario)</p>
          <hr />
          <p class="card-text text-white" >Historia : @Html.DisplayFor(modelItem => item.Historia)</p>
          <a @Html.ActionLink("Continuar Viendo", "DetallesC", new { id=item.ID }) >
        </div>
      </div>
    </div>
    }
</div>