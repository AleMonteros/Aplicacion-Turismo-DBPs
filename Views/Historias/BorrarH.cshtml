@model AppSocialTour.Models.Historia

@{
    ViewData["Title"] = "BorrarH";
}
<body class="pantallaHistoria">

<div>
<div class="card card-signin my-5 text-white bg-dark">
    <div class="card-body text-white bg-dark">
    <h1  class="card-title text-center">Borrar la Historia</h1>
        <hr /> 
        <h5 class="text-center">Â¿Quieres Eliminar esta carta Historica?</h5>
        <div>
        <dt class = "form-group">Titulo</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Nombre del Historiador o Autor</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.Historiador)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Email del Historiador</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.EmailHistoriador)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Paginas que sirvieron de Referencias</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.PaginasReferencia)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Desarrollo de la Hisoria</dt>
        <dd class = "form group">
            @Html.DisplayFor(model => model.Desarrollo)
        </dd>
        </div>
    </dl>
    
    <form asp-action="BorrarH">
        <div class="form-group">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        </div>
        <div class= "form-group">
        <input asp-action="History" type="submit" class="btn btn-outline-primary" value="Volver">
        </div>
    </form>
</div>
</body>