@model AppSocialTour.Models.Historia

@{
    ViewData["Title"] = "ContarH";
}

<body class="pantallaHistoria">
<div class="card card-signin my-5 text-white bg-dark">
    <div class="card-body text-white bg-dark">
    <h1  class="card-title text-center">Contemos una Historia</h1>
    <hr />
    <form asp-action="Guardar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ID" class="control-label"></label>
            <input asp-for="ID" class="form-control" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Titulo" class="control-label"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Historiador" class="control-label"></label>
            <input asp-for="Historiador" class="form-control" />
            <span asp-validation-for="Historiador" class="text-danger"></span>
        </div>
            <div class="form-group">
            <label asp-for="PaginasReferencia"class="control-label"></label>
            <input asp-for="PaginasReferencia" class="form-control" />
            <span asp-validation-for="PaginasReferencia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailHistoriador" class="control-label"></label>
            <input asp-for="EmailHistoriador" class="form-control" />
            <span asp-validation-for="EmailHistoriador" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Desarrollo">Redacta la Historia</label>
            <textarea class="form-control" asp-for="Desarrollo" rows="3"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-outline-primary" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary" asp-action="History">Volver</button>
        </div>
    </form>
    </div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}