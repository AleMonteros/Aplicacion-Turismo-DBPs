@model IEnumerable<Historia>

<div class="row mb-2">
@foreach (var item in Model) 
{
    <div class="col-md-6">
      <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative card card-signin bg-dark">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-white text-center">@Html.DisplayFor(modelItem => item.Titulo)</strong>
          <p class="card-text mb-auto text-white">@Html.DisplayFor(modelItem => item.Historiador)</p>
          <p class="card-text mb-auto text-white">Email del Historiador : @Html.DisplayFor(modelItem => item.EmailHistoriador)</p>
          <hr />
          <p class="card-text text-white" >Desarrollo : @Html.DisplayFor(modelItem => item.Desarrollo)</p>
          <a @Html.ActionLink("Continuar Leyendo", "MostrarH", new { id=item.ID }) >
        </div>
      </div>
    </div>
}
</div>