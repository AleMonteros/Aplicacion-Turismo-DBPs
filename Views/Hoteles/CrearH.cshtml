@model AppSocialTour.Models.Hotel

@{
    ViewData["Title"] = "CrearH";
}
<body class="pantallaH">
<div class="card card-signin my-5 text-white bg-dark">
    <div class="card-body text-white bg-dark">
    <h1  class="card-title text-center">Publica un Hospedaje</h1>
    <hr />
    <form asp-action="Guardar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ID">ID del Hospedaje</label>
            <input asp-for="ID" class="form-control" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NombreEmpresa">Nombre del Hospedaje</label>
            <input asp-for="NombreEmpresa" class="form-control" />
            <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TipoEmpresa">Tipo de Hospedaje</label>
            <input asp-for="TipoEmpresa" class="form-control" />
            <span asp-validation-for="TipoEmpresa" class="text-danger"></span>
        </div>
            <div class="form-group">
            <label asp-for="Representante">Representante (Nombre y Apellido)</label>
            <input asp-for="Representante" class="form-control" />
            <span asp-validation-for="Representante" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Direccion">Direccion</label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Horario">Horario</label>
            <input asp-for="Horario" class="form-control" />
            <span asp-validation-for="Horario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefono">Telefono</label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SitioWeb">Pagina Web del Hospedaje (opcional)</label>
            <input asp-for="SitioWeb" class="form-control" />
            <span asp-validation-for="SitioWeb" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Datos">Descripcion del Hospedaje</label>
            <textarea class="form-control" asp-for="Datos" rows="3"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-outline-primary" />
        </div>
        <div>
            <a asp-action="indexH" class="btn btn-outline-primary" type="submit">Volver</a>
        </div>
    </form>
    </div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}