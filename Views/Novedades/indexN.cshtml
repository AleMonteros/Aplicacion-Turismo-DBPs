@model IEnumerable<Novedad>
<div class="row mb-2">
  @foreach (var item in Model)
    {
    <div class="col-md-6">
      <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative card card-signin bg-dark">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-white text-center">@Html.DisplayFor(modelItem => item.Noticia)</strong>
          <p class="card-text mb-auto text-white">@Html.DisplayFor(modelItem => item.Lugar)</p>
          <p class="card-text mb-auto text-white">Direccion : @Html.DisplayFor(modelItem => item.Direccion)</p>
          <hr />
          <p class="card-text text-white" >Descripcion : @Html.DisplayFor(modelItem => item.Mensaje)</p>
          <a @Html.ActionLink("Continuar Viendo", "DetallesN", new { id=item.ID }) >
        </div>
      </div>
    </div>
    }
</div