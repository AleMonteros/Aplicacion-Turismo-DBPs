@model IEnumerable<Novedad>

<div>
@foreach (var item in Model) 
{
    <div class="card card-signin my-5 text-white bg-dark border rounded">
    <div class="card-body text-white bg-dark">
        <h3 class="card-header border rounded text-center"> @Html.DisplayFor(modelItem => item.Noticia)</h3>
        <hr>
    <div class="card-body bg-dark text-white border rounded">
        <h6 class="card-subtitle mb-2 text-muted"> @Html.DisplayFor(modelItem => item.Lugar)</h6>
        <p class="card-text"> @Html.DisplayFor(modelItem => item.Mensaje)</p>
        <a class="btn btn-outline-primary" @Html.ActionLink("Mostrar Novedad", "DetallesN", new { id=item.ID })></a>
    </div>
    </div>
    </div>
}
</div>