@model AppSocialTour.Models.Promocion

<body class="pantallaP">
<form>
<div class="card card-signin my-5 text-white bg-dark">
    <div class="card-body text-white bg-dark">
        <h1  class="card-title text-center">Promocion</h1>
        <hr />
        <div>
        <dt class = "form-group">Promocion</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.Promo)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Nombre del Negocio o Emprendimiento</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.NombreNegocio)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Tipo de Negocio o Emprendimiento</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.TipoNegocio)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Direccion</dt>
        <dd class = "for-group">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Datos de la Promocion</dt>
        <dd class = "form group">
            @Html.DisplayFor(model => model.DatosPromo)
        </dd>
        </div>
        <hr >
        <div class="form-group">
            <input asp-action="EditarP" asp-route-id="@Model.ID" type="submit" class="btn btn-outline-primary" value="Actualizar">
        </div>
        <div class="form-group">
            <input asp-action="EliminarP" asp-route-id="@Model.ID" type="submit" class="btn btn-outline-danger" value="Eliminar">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary" asp-action="indexP" asp-route-id="@Model.ID">Volver</button>
        </div>
    </div>
</div>
</form>
</body>