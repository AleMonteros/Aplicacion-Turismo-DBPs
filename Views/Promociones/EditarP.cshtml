@model AppSocialTour.Models.Promocion

@{
    ViewData["Title"] = "EditarH";
}

<body class="pantallaH">
<div class="card card-signin my-5 text-white bg-dark">
    <div class="card-body text-white bg-dark">
    <h1  class="card-title text-center">Actualizador de Promociones</h1>
        <hr />
        <form asp-action="EditarP" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID">ID de la Publicacion</label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promo">Promocion</label>
                <input asp-for="Promo" class="form-control" />
                <span asp-validation-for="Promo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoNegocio">Â¿Que tipo de Negocio o Emprendimiento es?</label>
                <input asp-for="TipoNegocio" class="form-control" />
                <span asp-validation-for="TipoNegocio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreNegocio">Nombre del Negocio</label>
                <input asp-for="NombreNegocio" class="form-control" />
                <span asp-validation-for="NombreNegocio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion">Direccion</label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatosPromo">Datos de la Promocion</label>
                <textarea class="form-control" asp-for="DatosPromo" rows="3"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
            </div>
            <div>
                <a asp-action="indexP" class="btn btn-outline-primary" type="submit">Volver</a>
            </div>
        </form>
    </div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}