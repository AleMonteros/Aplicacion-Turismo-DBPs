@model  AppSocialTour.Models.RestBar

@{
    ViewData["Title"] = "DetallesRB";
}
<body class="pantallaRB">
<form>
<div class="card card-signin my-5 text-white bg-dark">
    <div class="card-body text-white bg-dark">
        <h1 class="card-title text-center">@Html.DisplayFor(model => model.NombreEmpresa)</h1>
        <hr />
        <div>
        <dt class = "form-group">Tipo de Emprendimiento</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.TipoEmpresa)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Representante de la Publicacion</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.Representante)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Direccion</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Horario</dt>
        <dd class = "form group">
            @Html.DisplayFor(model => model.Horario)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Telefono</dt>
        <dd class = "form group">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Pagina Web del Emprendimiento</dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.SitioWeb)
        </dd>
        </div>
        <div>
        <dt class = "form-group">Descripcion del Emprendimiento</dt>
        <dd class = "form group">
            @Html.DisplayFor(model => model.Datos)
        </dd>
        </div>
        <hr >
        <div class="form-group">
            <input asp-action="EditarRB" asp-route-id="@Model.ID" type="submit" class="btn btn-outline-primary" value="Actualizar">
        </div>
        <div class="form-group">
            <input asp-action="EliminarRB" asp-route-id="@Model.ID" type="submit" class="btn btn-outline-danger" value="Eliminar">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary" asp-action="indexRB" asp-route-id="@Model.ID">Volver</button>
        </div>
    </div>
</div>
</form>
</body>