@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav text-center">
@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
        <a  class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <input  type="submit" class="nav-link btn btn-link" value="Cerrar Seccion">
        </form>
    </li>

}
else
{
    <li class="nav-item text-white">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Crear Cuenta</a>
    </li>
    <li class="nav-item text-white">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Iniciar Seccion</a>
    </li>
}
</ul>
