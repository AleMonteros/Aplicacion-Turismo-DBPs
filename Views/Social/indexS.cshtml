<body class="pantallaS">
<div class="jumbotron bg-dark">
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column text-center bg-dark">
  <main role="main" class="inner cover">
	  <h1 class="display-3 text-white">Vive y Contempla</h1>
    <p class="lead text-white">Plazas, Museos y muchos mas al alcance de todos.</p>
  </main>
</div>
</div>
</body>
<form action="@Url.Action("CrearS", "Social")">
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block bg-dark text-white">Publicar Turismo Social</button>
    </div>
</form>

@model IEnumerable<Social>
<div class="row mb-2">
  @foreach (var item in Model)
    {
    <div class="col-md-6">
      <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative card card-signin bg-dark">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-white text-center">@Html.DisplayFor(modelItem => item.Nombre)</strong>
          <p class="card-text mb-auto text-white">Categoria : @Html.DisplayFor(modelItem => item.Categoria)</p>
          <p class="card-text mb-auto text-white">Direccion : @Html.DisplayFor(modelItem => item.Direccion)</p>
          <p class="card-text mb-auto text-white">Horario : @Html.DisplayFor(modelItem => item.Horario)</p>
          <p class="card-text mb-auto text-white">Telefono : @Html.DisplayFor(modelItem => item.Telefono)</p>
          <hr />
          <p class="card-text text-white" >Descripcion : @Html.DisplayFor(modelItem => item.Datos)</p>
          <a @Html.ActionLink("Continuar Viendo", "DetallesS", new { id=item.ID }) >
        </div>
      </div>
    </div>
    }
</div>
