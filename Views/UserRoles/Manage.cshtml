@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="pantalla">
<div class="container">
        <form method="post">
            <div class="card card-signin my-5">
            <div class="card-body">
            <h1  class="card-title text-center">Gestionar Rol del Usuario</h1>
            <hr />
            <h5 class="text-center">Añadir o Remover Rol del Usuario : @ViewBag.UserName</h5>
            <div class="form-group">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir" class="btn btn-outline-primary"
                   style="width:auto" />
            </div>
            <div class="form-group">
                <a asp-controller="UserRoles" asp-action="index" asp-route-id="@ViewBag.userId"
                class="btn btn-outline-danger" style="width:auto">Cancelar</a>
            </div>
            </div>
            </div>
        </form>
</div>
</body>